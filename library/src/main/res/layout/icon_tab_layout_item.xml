<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iconView"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/icon_tab_layout_item_icon_size"
        android:layout_height="@dimen/icon_tab_layout_item_icon_size"
        android:layout_marginTop="@dimen/icon_tab_layout_item_icon_margin_top"/>
    <TextView
        android:id="@+id/titleView"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/icon_tab_layout_item_title_font_size" />
</LinearLayout>